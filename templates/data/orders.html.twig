{% extends 'base.html.twig' %}

{% block title %}VOIR LES COMMANDES{% endblock %}

{% block body %}

    <div class="container w-50 mx-auto my-5">
        <h1 class="bg-primary mt-5 mb-0 py-2 text-center">VOIR LES ORDERS ACTUELS :</h1>
        <a href="{{ path('app_dataHome')}}" class="btn btn-primary mt-3">Retour</a>
        <table class="table table-striped table-hover text-left my-5">
            <thead>
                <tr class="bg-secondary">
                    <th scope="col" class="text-center">Id</th>
                    <th scope="col" class="text-center">Date</th>
                    <th scope="col" class="text-center">Produits</th>
                    <th scope="col" class="text-center">Nom client</th>
                    <th scope="col" class="text-center">Pr√©nom client</th>
                    <th scope="col" class="text-center">Adresse</th>
                    <th scope="col" class="text-center">Mobile</th>

                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <th scope="row" class="text-center">{{ order.getId() }}</th>
                    <td class="text-center">{{ order.getDate()|date("m/d/Y") }}</td>
                    <td class="text-center">{{ order.getProduits()|json_encode() }}</td>
                    <td class="text-center">{{ order.getNomClient() }}</td>
                    <td class="text-center">{{ order.getPrenomClient() }}</td>
                    <td class="text-center">{{ order.getAdresseClient() }}</td>
                    <td class="text-center">{{ order.getTelClient() }}</td>
                </tr>
            {% endfor %}
            </tbody>            
        </table>       
    </div>

{% endblock %}